{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "types": [
            "node",
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "outDir": "./dist/",
        "baseUrl": ".",
    },
    "exclude": [
        "./node_modules",
    ],
    "include": [
        "."
    ]
}